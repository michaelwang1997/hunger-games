<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">
        <!--android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"-->

        <ImageView
            android:id="@+id/picture"
            android:layout_marginTop="25dp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:contentDescription="@string/content_description"/>

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_below="@+id/picture"
            android:layout_marginTop="25dp"
            android:id="@+id/event_name">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/event_name" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/quantity"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/location"
            android:layout_alignEnd="@+id/picture"
            android:layout_alignRight="@+id/picture"
            android:layout_marginBottom="13dp"
            android:entries="@array/quantity"
            android:prompt="@string/quantity_prompt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_name"
            android:text="@string/close_text"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_below="@+id/event_name"
            android:layout_marginTop="5dp"
            android:id="@+id/location"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/room"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:contentDescription="@string/question_desc"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_info_black_36dp"
            android:layout_below="@+id/event_name"
            android:layout_alignRight="@+id/radio_close"
            android:layout_alignEnd="@+id/radio_close"
            android:layout_marginTop="23dp"
            />

        <RadioGroup
            android:id="@+id/radio_close"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity"
            android:layout_marginTop="20dp" >

            <RadioButton
                android:id="@+id/close_y"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/close_y"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/close_n"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/close_n" />

        </RadioGroup>

        <Spinner
            android:id="@+id/category"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_close"
            android:entries="@array/category"
            android:prompt="@string/category_prompt"
            android:layout_marginTop="15dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/description"
            android:layout_width="300dp"
            android:layout_height="165dp"
            android:layout_below="@+id/category"
            android:layout_marginTop="10dp" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:text="@string/submit"
            android:background="@color/colorPrimary"/>
    </RelativeLayout>


</RelativeLayout>
